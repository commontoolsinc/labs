{
  "compilerOptions": {
    "strict": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "removeComments": true,
    "noEmitOnError": true,
    "declaration": true,
    "sourceMap": true,
    "inlineSources": true,
    "inlineSourceMap": false,
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "isolatedModules": false,
    "noLib": true,
    "types": [
      "ct-env"
    ],
    "typeRoots": [
      "./.ct-types"
    ],
    "jsx": "react-jsx",
    "target": "ES2023",
    "module": "amd",
    "allowSyntheticDefaultImports": true,
    "allowImportingTsExtensions": true,
    "noEmit": true
  },
  "exclude": [
    "node_modules",
    "**/node_modules/*"
  ]
}