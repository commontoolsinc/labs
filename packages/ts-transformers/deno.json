{
  "name": "@commontools/ts-transformers",
  "version": "0.1.0",
  "exports": {
    ".": "./src/mod.ts",
    "./core/context": "./src/core/context.ts",
    "./core/imports": "./src/core/imports.ts"
  },
  "imports": {
    "typescript": "npm:typescript",
    "@commontools/test-support": "../test-support/src/mod.ts",
    "@commontools/test-support/fixture-runner": "../test-support/src/fixture-runner.ts",
    "@commontools/static": "../static/index.ts",
    "@commontools/js-runtime/transformers": "../js-runtime/typescript/transformer/mod.ts",
    "@commontools/js-runtime": "../js-runtime/mod.ts"
  },
  "tasks": {
    "test": "deno test --no-check --allow-read --allow-write --allow-env test/**/*.test.ts",
    "check": "deno check src/**/*.ts",
    "fmt": "deno fmt src/ test/",
    "lint": "deno lint src/ test/"
  },
  "compilerOptions": {
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,
    "exactOptionalPropertyTypes": true
  }
}
