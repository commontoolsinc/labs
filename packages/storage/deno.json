{
  "name": "@commontools/storage",
  "tasks": {
    "dev": "deno run -A deno.ts",
    "check": "deno check .",
    "just-test": {
      "description": "Just run unit tests without type checking",
      "command": "deno test -A test"
    },
    "test": {
      "description": "Type check & run tests",
      "dependencies": [
        "check"
      ],
      "command": "deno test -A test"
    },
    "integration": "DISABLE_LOGGING=1 deno test -A ./integration/*.test.ts ./integration/*_test.ts",
    "new-storage:export-snapshot": "deno run -A ./cli/export_snapshot.ts",
    "new-storage:import-snapshot": "deno run -A ./cli/import_snapshot.ts",
    "new-storage:list-spaces": "deno run -A ./cli/list_spaces.ts",
    "new-storage:list-branches": "deno run -A ./cli/list_branches.ts",
    "ws": "deno run -A deno.ts"
  },
  "compilerOptions": {
    "strict": true,
    "noImplicitReturns": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "useUnknownInCatchVariables": true
  },
  "test": {
    "include": [
      "test/*-test.ts"
    ]
  },
  "exports": {
    ".": "./mod.ts",
    "./interface": "./interface.ts",
    "./ws/server": "./src/ws/server.ts",
    "./ws/protocol": "./src/ws/protocol.ts"
  },
  "imports": {
    "@std/assert": "jsr:@std/assert@^1",
    "@std/expect": "jsr:@std/expect@^1",
    "@std/testing": "jsr:@std/testing@^1",
    "@db/sqlite": "jsr:@db/sqlite@^0.12.0",
    "@automerge/automerge": "npm:@automerge/automerge@^3.1.1"
  }
}
