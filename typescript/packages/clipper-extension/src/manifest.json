{
  "{{chrome}}.manifest_version": 3,
  "{{firefox}}.manifest_version": 2,
  "icons": {
    "16": "icon/16.png",
    "32": "icon/32.png",
    "48": "icon/48.png",
    "96": "icon/96.png",
    "128": "icon/128.png"
  },
  "{{chrome}}.action": {
    "default_popup": "src/popup.html",
    "default_width": 800,
    "default_height": 600
  },
  "{{firefox}}.browser_action": {
    "default_popup": "src/popup.html",
    "default_width": 800,
    "default_height": 600
  },
  "background": {
    "{{chrome}}.service_worker": "src/background.ts",
    "{{firefox}}.scripts": [
      "src/background.ts"
    ]
  },
  "permissions": [],
  "{{chrome}}.permissions": [
    "tabs",
    "storage",
    "activeTab",
    "contextMenus",
    "scripting"
  ],
  "{{firefox}}.permissions": [
    "tabs",
    "storage",
    "activeTab",
    "contextMenus",
    "scripting"
  ]
}
