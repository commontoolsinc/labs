{
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "denoland.vscode-deno",
  "deno.enable": true,
  "[typescript]": {
    "editor.defaultFormatter": "denoland.vscode-deno"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "denoland.vscode-deno"
  },
  "deno.disablePaths": [
    "**/node_modules",
    "**/.vite",
    "**/dist",
    "**/build"
  ],
  "deno.cacheOnSave": true,
  "deno.maxTsServerMemory": 3072
}
