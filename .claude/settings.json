{
  "permissions": {
    "allow": [
      "Bash(grep:*)",
      "Bash(deno test:*)",
      "Bash(deno task test:*)",
      "Bash(find:*)",
      "Bash(deno lint:*)",
      "Bash(rg:*)"
    ],
    "deny": []
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "deno run --allow-read --allow-env \"$CLAUDE_PROJECT_DIR/.claude/scripts/block-git-amend.ts\""
          },
          {
            "type": "command",
            "command": "deno run --allow-read --allow-env \"$CLAUDE_PROJECT_DIR/.claude/scripts/block-node.ts\""
          },
          {
            "type": "command",
            "command": "deno run --allow-read --allow-env \"$CLAUDE_PROJECT_DIR/.claude/scripts/block-ct.ts\""
          },
          {
            "type": "command",
            "command": "deno run --allow-read --allow-run --allow-env \"$CLAUDE_PROJECT_DIR/.claude/scripts/pre-commit.ts\""
          },
          {
            "type": "command",
            "command": "deno run --allow-read --allow-env \"$CLAUDE_PROJECT_DIR/.claude/scripts/deno-test-filter.ts\""
          },
          {
            "type": "command",
            "command": "deno run --allow-read --allow-env \"$CLAUDE_PROJECT_DIR/.claude/scripts/ask-before-delete-spaces.ts\""
          }
        ]
      },
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "deno run --allow-read \"$CLAUDE_PROJECT_DIR/.claude/scripts/pre-edit-reminders.ts\""
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "deno run --allow-read --allow-run \"$CLAUDE_PROJECT_DIR/.claude/scripts/post-edit-ts.ts\""
          }
        ]
      },
      {
        "matcher": "ExitPlanMode",
        "hooks": [
          {
            "type": "command",
            "command": "deno run --allow-read \"$CLAUDE_PROJECT_DIR/.claude/scripts/post-exit-plan.ts\""
          }
        ]
      }
    ],
    "SubagentStop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "deno run --allow-read --allow-run \"$CLAUDE_PROJECT_DIR/.claude/scripts/subagent-stop.ts\"",
            "timeout": 120
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "deno run --allow-read --allow-run \"$CLAUDE_PROJECT_DIR/.claude/scripts/stop-check.ts\""
          }
        ]
      }
    ]
  }
}
